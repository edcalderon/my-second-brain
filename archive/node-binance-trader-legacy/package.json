{
    "name": "node-binance-trader",
    "private": true,
    "version": "0.4.1",
    "packageManager": "bun@1.2.3",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "engine": {
        "node": ">=0.12"
    },
    "description": "An efficient cryptocurrency trading bot development framework for Binance using Node.js",
    "main": "./src/server.js",
    "keywords": [
        "binance",
        "cryptocurrency",
        "trading",
        "bot",
        "alert",
        "signal",
        "backtesting"
    ],
    "author": "Herve Fulchiron <herve76@gmail.com>",
    "license": "ISC",
    "scripts": {
        "start": "node ./src/server.js",
        "trader": "node ./src/trader.js",
        "backtest": "node ./src/backtest.js",
        "typecheck": "npx tsc --noEmit",
        "versioning:init": "npx versioning init",
        "versioning:validate": "npx versioning validate",
        "versioning:sync": "npx versioning sync",
        "version:patch": "npx versioning patch --no-tag --no-commit",
        "version:minor": "npx versioning minor --no-tag --no-commit",
        "version:major": "npx versioning major --no-tag --no-commit",
        "state:init": "npx versioning reentry init && npx versioning roadmap init --title \"Binance Futures Platform Migration\"",
        "state:sync": "npx versioning reentry sync"
    },
    "devDependencies": {
        "@edcalderon/versioning": "^1.1.0",
        "@types/bun": "^1.2.3",
        "fast-check": "^4.2.0",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "axios": "0.21.1",
        "bignumber.js": "9.0.1",
        "binance-api-node": "0.10.33",
        "colors": "1.4.0",
        "dotenv": "8.2.0",
        "envalid": "7.0.0",
        "express": "4.17.1",
        "lodash": "4.17.21",
        "moment": "2.29.1",
        "node-binance-api": "0.12.5",
        "nodemailer": "6.5.0",
        "ora": "3.4.0",
        "pg": "7.18.2",
        "set-interval-async": "1.0.34",
        "socket.io": "2.4.1",
        "socket.io-client": "2.4.0",
        "telebot": "1.4.1",
        "tulind": "0.8.18"
    }
}
