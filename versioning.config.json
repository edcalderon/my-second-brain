{
  "rootPackageJson": "package.json",
  "packages": [
    "apps/dashboard",
    "apps/docs"
  ],
  "changelogFile": "CHANGELOG.md",
  "conventionalCommits": true,
  "syncDependencies": true,
  "ignorePackages": [
    "packages/versioning"
  ],
  "extensionConfig": {
    "reentry-status": {
      "enabled": true,
      "autoSync": true,
      "failHard": false,
      "hooks": {
        "postVersion": true,
        "postRelease": false
      },
      "projects": {
        "trader": {
          "enabled": true
        }
      }
    },
    "secrets-check": {
      "enabled": true,
      "patterns": [],
      "allowlist": [
        "SAFE_TEST_KEY"
      ]
    },
    "cleanup-repo": {
      "enabled": true,
      "defaultDestination": "docs",
      "allowlist": [
        "CHANGELOG.md",
        "TODO"
      ],
      "denylist": [],
      "extensions": [
        ".md",
        ".sh",
        ".json",
        ".yaml",
        ".yml",
        ".txt",
        ".log"
      ],
      "routes": {
        ".md": "docs",
        ".sh": "scripts",
        ".json": "config",
        ".yaml": "config",
        ".yml": "config",
        ".txt": "archive",
        ".log": "archive"
      },
      "husky": {
        "enabled": true,
        "hook": "pre-commit",
        "mode": "scan"
      }
    }
  }
}
